## This is the MonteCarlo for solid angles ##
import numpy as np
from matplotlib import pyplot as plt
import math as mt
from scipy import random

a=0
b=np.pi
N=100000
def func(x):
    return mt.sin(x)

areas=[]
for i in range(1000):
    xrand=random.uniform(a,b,N)
    integral=0
    for j in range(N):
        integral+=func(xrand[j])
    final=(a-b)/float(N)*integral
    areas.append(final)

plt.hist(areas,30)
